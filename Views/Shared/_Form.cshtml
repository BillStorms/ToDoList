@using Microsoft.AspNetCore.Mvc.TagHelpers
@model TodoViewModel

<form asp-action="Insert" id="form-action" method="post" role="form">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
            <label asp-for="Todo.Name">Name:</label>
            <input asp-for="Todo.Id" type="hidden" />
            <input asp-for="Todo.Name" class="form-control" />
            <span asp-validation-for="Todo.Name"></span>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10 mt-3 mb-5">
            <input type="submit" id="form-button" value="Add todo" class="btn btn-dark" />
        </div>
    </div>
</form>

